{
  "name": "toro",
  "version": "0.1.0",
  "description": "Tōrō - The River of Souls - Multiplayer .io Survival Game",
  "type": "module",
  "scripts": {
    "dev:client": "cd client && vite",
    "dev:server": "cd server && npx tsx watch src/index.ts",
    "build:client": "cd client && vite build",
    "build:server": "cd server && tsc",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "dependencies": {
    "phaser": "^3.80.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}

