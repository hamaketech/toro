{
  "name": "toro",
  "version": "0.1.0",
  "description": "Tōrō - The River of Souls - Multiplayer .io Survival Game",
  "type": "module",
  "scripts": {
    "dev:client": "cd client && vite",
    "dev:server": "cd server && npx tsx watch src/index.ts",
    "build:client": "cd client && vite build",
    "build:server": "esbuild server/src/index.ts --bundle --platform=node --target=node20 --outfile=server/dist/index.js --format=esm --packages=external",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node server/dist/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "docker:build": "docker build -t toro .",
    "docker:run": "docker run -p 3000:3000 --name toro-game toro",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "phaser": "^3.80.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "express": "^4.18.2",
    "redis": "^4.6.13",
    "@socket.io/redis-adapter": "^8.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}

